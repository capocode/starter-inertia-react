{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": false,
      "forceConsistentCasingInFileNames": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
        "@components/*": [ "src/js/components/*" ],
        "@/*": [ "src/js/*" ],
      },
      "incremental": true
    },
    "include": [
      "./src/**/*.ts",
      "./src/**/*.tsx",
    ],
    "exclude": [
      "node_modules"
    ]
  }
  